<h1>I am the detailed vehicle show page.  I have tabs, details, notes, invoice </h1>


<tabs>
    <tab label='Vehicle Details'>
        <p>{{ctrl.vehicle_data.vehicle}}</p>
        <ul>
            <li ng-repeat="note in ctrl.vehicle_data.vehicle.notes">{{note.user}} on {{note.created_at}}: {{note.content}} 
            <a href='#' ng-if="nav.userrole === 'admin'">for delete button: {{note.id}}</a></span></li>
        </ul>

        <div ng-controller='NoteController as noteCtrl'>
            <h1>Add note</h1>
            <form validate ng-submit="noteCtrl.addNote()">
                <label>Content</label>
                <input type="text" ng-model="noteCtrl.note.content">
                <input type="submit" value="Add Note">
            </form>
        </div>

    </tab>
    <tab label='Invoice'>
        <p>invoice</p>
    </tab>
</tabs>
