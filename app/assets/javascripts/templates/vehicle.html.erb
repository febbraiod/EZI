<h1>I am the detailed vehicle show page.  I have tabs, details, notes, invoice </h1>

<tabs>

    <tab label='Vehicle Details'>
            <div style="float:left; width:45%;"> <!-- temp. to be addressed width bootstrap -->
            <h3>{{ctrl.vehicle_data.vehicle.year}} {{ctrl.vehicle_data.vehicle.make}} {{ctrl.vehicle_data.vehicle.model}}</h3>
            <p>{{ctrl.vehicle_data.vehicle.VIN}}</p>
            <p>{{ctrl.vehicle_data.vehicle.options}}</p>
            <p>Status: {{ctrl.vehicle_data.vehicle.status.status}}</p>
            <p>Applied by: {{ctrl.vehicle_data.vehicle.status.user}}</p>
        </div>
        <div style="float:right; width:45%; text-align: left;"> <!-- temp. to be addressed width bootstrap -->
            <div ng-controller='NoteController as noteCtrl'>
                <h3>Add note</h3>
                <form validate ng-submit="noteCtrl.addNote()">
                    <label>Content</label><br>
                    <input type="text" ng-model="noteCtrl.note.content">
                    <input type="submit" value="Add Note">
                </form>
                <h3>Notes:</h3>
                <p ng-repeat="note in ctrl.vehicle_data.vehicle.notes | orderBy: '-created_at'">
                    {{note.user}} on {{note.created_at}}: <br>{{note.content}}<br>
                    <button ng-if="session.userrole === 'admin'" ng-click="noteCtrl.removeNote(note)">for delete button</button></span>
                </p>
            </div>
        </div>
    </tab>

    <tab label='Invoice'>
        <p>invoice</p>
    </tab>

</tabs>

